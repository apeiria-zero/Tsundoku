<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @record.book_name %>
      </p>
      <div class="post-time">
        <%= @record.created_at.strftime('%Y/%m/%d')%>
        <% 
        createdDateTime=@record.created_at
        @createdDate=createdDateTime.strftime('%Y/%m/%d')
        today = Date.today
        createdDate=Date.parse(@createdDate)
        @dayDifference=(today-createdDate).to_i
        %>
        <br>
        積読日数は<%= @dayDifference %>日です<br>
        積読者:<%= @user.name %>
        <div class="post-menus">
        <% if @record.user_id == @current_user.id %>
        <%= link_to("編集", "/records/#{@record.id}/edit") %>
        <%= link_to("削除", "/records/#{@record.id}/destroy", {method: "post"}) %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>